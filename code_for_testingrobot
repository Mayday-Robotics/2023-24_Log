myVariable = 0

def when_started1():
    global myVariable
    while True:
        if controller_1.axis3.position() > 0:
            pass
        wait(5, MSEC)

def onevent_controller_1axis3Changed_0():
    global myVariable
    pass

def when_started2():
    global myVariable
    while True:
        if 0 > controller_1.axis3.position():
            motor_20.set_velocity(controller_1.axis3.position(), PERCENT)
            motor_20.spin(FORWARD)
        elif controller_1.axis3.position() > 0:
            motor_20.set_velocity(controller_1.axis3.position(), PERCENT)
            motor_20.spin(FORWARD)
        else:
            motor_20.stop()
        wait(5, MSEC)

def when_started3():
    global myVariable
    while True:
        if 0 > controller_1.axis2.position():
            motor_11.set_velocity(controller_1.axis2.position(), PERCENT)
            motor_11.spin(REVERSE)
        elif controller_1.axis2.position() > 0:
            motor_11.set_velocity(controller_1.axis2.position(), PERCENT)
            motor_11.spin(REVERSE)
        else:
            motor_11.stop()
        wait(5, MSEC)

