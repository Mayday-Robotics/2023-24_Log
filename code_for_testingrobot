def when_started5():
    global myVariable
    while True:
        if controller_1.buttonL1.pressing():
            motor_7.spin(FORWARD)
        else:
            motor_7.stop()
        wait(5, MSEC)

def when_started6():
    global myVariable
    while True:
        if controller_1.buttonX.pressing():
            motor_3.spin(FORWARD)
        elif controller_1.buttonB.pressing():
            motor_3.spin(REVERSE)
        else:
            motor_3.stop()
        wait(5, MSEC)

